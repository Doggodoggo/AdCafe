<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:textSize="19sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimary"
        android:text="Contact them."
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/CallLayout"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="40dp"
            android:id="@+id/phoneIcon"
            android:background="@drawable/ic_action_call"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="Call: 0712346578"
            android:id="@+id/callTextView"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/websiteLayout"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="40dp"
            android:id="@+id/websiteIcon"
            android:background="@drawable/ic_action_website"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="Visit Website."
            android:id="@+id/visitWebsiteText"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/LocationLayout"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="40dp"
            android:id="@+id/locationIcon"
            android:background="@drawable/ic_action_map"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="Their Location."
            android:id="@+id/locationText"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>