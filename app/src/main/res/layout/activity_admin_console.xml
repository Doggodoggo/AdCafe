<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.bry.adcafe.ui.AdminConsole">


    <ScrollView
        android:layout_width="match_parent"
        android:scrollbarStyle="insideInset"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/LoadAdsWhichHaveBeenSeenLess"
                android:text="AdvertisersToReemburse"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/LoadTomorrowsAds"
                android:text="TomorrowsAds"
                android:layout_height="wrap_content" />

            <com.mindorks.placeholderview.PlaceHolderView
                android:id="@+id/PlaceHolderViewData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"/>

            <com.mindorks.placeholderview.PlaceHolderView
                android:layout_marginTop="10dp"
                android:id="@+id/PlaceHolderViewTomorrowsAds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>
