<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:visibility="visible"
            android:padding="15dp"
            android:id="@+id/enterPayoutDetailsPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textSize="19sp"
                android:textColor="@color/colorPrimary"
                android:text="Payment Details."
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:text="@string/mpesaPaymentDetails"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:text="Your Phone Number."
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/phoneEditText"
                android:inputType="phone"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColorHint="@color/greyHint"
                android:nextFocusDown="@+id/emailEditText"
                android:hint="0712345678"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:text="Your Email (me@example.com)."
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:id="@+id/emailEditText"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textSize="15sp"
                android:cursorVisible="true"
                android:textColorHint="@color/greyHint"
                android:nextFocusDown="@+id/stateEditText"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_height="40dp">

                <Button
                    android:id="@+id/cancelBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@null"
                    android:text="Cancel"
                    android:visibility="invisible"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/continueButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:text="Continue."
                    android:textColor="@color/colorPrimary" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:id="@+id/confirmLayout"
            android:translationX="350dp"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textSize="19sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Confirm Everything."
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:text="Make Sure All The Details Are Right Before Continuing."
                android:paddingBottom="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/targetingNumber"
                android:text="Targeting: 1000 users."
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/date"
                android:text="Ad Viewing Date: 31:1:2019."
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/category"
                android:text="Category : Food."
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/userEmail"
                android:text="Uploader: user@email.com"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/amountToBePaid"
                android:text="Amount To Be Paid: 5000KSH."
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/payingPhoneNumber"
                android:text="Paying phone number: 0798123456."
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/transationCost"
                android:visibility="gone"
                android:text="Transaction cost: 250Ksh"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/vatCost"
                android:visibility="visible"
                android:text="VAT amount: 250Ksh"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="17sp"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/startButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:text="Continue."
                        android:textColor="@color/colorPrimary" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>