<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="160dp"
        android:layout_height="230dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textSize="11sp"
                android:layout_marginBottom="10dp"
                android:id="@+id/EmailText"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="Uploaded by : user@example.com"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="11sp"
                android:id="@+id/TargetedNumber"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="No. of users targeted : 5000"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="11sp"
                android:id="@+id/usersReachedSoFar"
                android:textAlignment="center"
                android:text="Users reached: 4100"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="11sp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textAlignment="center"
                android:text="Reimbursal amount :"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="11sp"
                android:id="@+id/AmountToReimburse"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textAlignment="center"
                android:text="1200Ksh"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="11sp"
                android:id="@+id/dateUploaded"
                android:textAlignment="center"
                android:text="Date uploaded : 21:5:2019"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:textSize="11sp"
                android:id="@+id/hasBeenReimbursed"
                android:textAlignment="center"
                android:text="boi"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:id="@+id/viewCard"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/takeDownTextX"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"
                    android:text="VIEW."
                    android:textSize="11sp"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/reimburseOldBtn"
                android:layout_width="86dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                style="?android:attr/borderlessButtonStyle"
                android:background="@color/colorPrimaryDark"
                android:text="Reimburse."
                android:textSize="10dp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>