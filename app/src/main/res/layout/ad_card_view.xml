<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="46dp"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:visibility="visible"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/reportBtn"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_action_flag"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/Report"
                    android:text="Report"
                    android:textSize="8dp"
                    android:paddingTop="35dp"
                    android:paddingLeft="19dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:visibility="visible"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/bookmark2Btn"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/ic_action_pin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/Bookmark2Text"
                    android:text="Pin"
                    android:textSize="8dp"
                    android:paddingTop="35dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:visibility="visible"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/WebsiteIcon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:alpha="0.4"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/ic_action_website"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/websiteText"
                    android:text="Visit"
                    android:alpha="0.4"
                    android:textSize="8dp"
                    android:paddingTop="35dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="right"
            android:paddingRight="5dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:visibility="visible"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/shareImageIcon"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_action_share2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/shareImageText"
                    android:text="Share"
                    android:textSize="8dp"
                    android:paddingTop="35dp"
                    android:paddingLeft="20dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/profileImageView"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_marginRight="0.4dp"
            android:layout_marginLeft="0.4dp"
            android:layout_marginTop="0.4dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp"/>

        <View
            android:layout_width="2dp"
            android:visibility="invisible"
            android:layout_gravity="bottom"
            android:layout_marginLeft="147dp"
            android:layout_marginBottom="35dp"
            android:id="@+id/smallDot"
            android:background="@color/fuchsia"
            android:layout_height="2dp"/>

        <ImageView
            android:id="@+id/errorImageView"
            android:layout_gravity="center"
            android:visibility="gone"
            android:background="@drawable/ic_action_error"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="50dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <!--<ProgressBar-->
                <!--android:id="@+id/pbCardProgress"-->
                <!--style="?android:attr/progressBarStyleSmall"-->
                <!--android:indeterminate="true"-->
                <!--android:visibility="gone"-->
                <!--android:layout_marginRight="@dimen/activity_horizontal_margin"-->
                <!--android:progressDrawable="@drawable/circular_progress_layout"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp" />-->

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/adCardAvi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="invisible"
                    style="@style/AVLoadingIndicatorView"
                    app:indicatorName="LineScaleIndicator"
                    app:indicatorColor="@color/accent" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</FrameLayout>