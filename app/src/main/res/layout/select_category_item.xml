<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="115dp"
        android:layout_height="145dp"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:id="@+id/categoryCard"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_marginBottom="30dp"
                android:id="@+id/categoryImage"
                android:scaleType="fitXY"
                android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="30dp">

            <TextView
                android:layout_width="match_parent"
                android:text="womens clothing websites"
                android:id="@+id/cat_name"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_height="30dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="5dp"
                android:layout_height="30dp">

                <ImageView
                    android:layout_width="10dp"
                    android:id="@+id/checkImage"
                    android:paddingTop="10dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/ic_action_checkbox"
                    android:layout_alignParentRight="true"
                    android:layout_height="10dp" />

            </RelativeLayout>

        </RelativeLayout>

            <CheckBox
                android:id="@+id/cat_select"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textSize="10sp"
                android:text="money storage services"
                android:textColor="@color/secondary_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="5dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:text="money storage services"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ems="12"
            android:text="Category"
            android:textSize="20sp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/cat_details"
            android:text="category details eg. blah, blah, blah."
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:background="@color/accent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_height="1dp"/>

    </LinearLayout>

</LinearLayout>