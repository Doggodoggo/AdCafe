<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topText"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:padding="10dp"
        android:text="Also, choose the category of viewers your targeting. This is based on the amount each user charges for every banner they see. " />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:layout_width="match_parent"
            android:padding="20dp"
            android:id="@+id/cpvRadioGroup"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="3 Ksh per view." />

            <RadioButton
                android:id="@+id/radioButton5"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="5 Ksh per view. (Recommended)" />

            <RadioButton
                android:id="@+id/radioButton8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="8 Ksh per view." />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:text="continue"
                    android:textColor="@color/white"
                    android:id="@+id/submitButton"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:text="Cancel"
                    android:layout_marginLeft="100dp"
                    android:textColor="@color/primary_text"
                    android:id="@+id/cancelButton"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RadioGroup>

    </LinearLayout>

</LinearLayout>