<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:text="Payment Options."
            android:layout_marginBottom="10dp"
            android:textColor="@color/primary_text"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:text="@string/needToMakePayments"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:text="@string/noteAboutCreditCardInfo"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:background="@drawable/visa"
                android:layout_height="30dp" />

            <ImageView
                android:layout_width="40dp"
                android:background="@drawable/ms"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp" />

            <ImageView
                android:layout_width="60dp"
                android:background="@drawable/mpesa_icon"
                android:layout_marginLeft="10dp"
                android:layout_height="30dp" />

        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:id="@+id/selectPaymentRadioGroup"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Pay via Mpesa."/>

            <RadioButton
                android:id="@+id/radioButtonC"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Pay via Credit/Debit Card."/>

        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp">

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:text="Cancel"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/continueButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:text="Proceed."
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>